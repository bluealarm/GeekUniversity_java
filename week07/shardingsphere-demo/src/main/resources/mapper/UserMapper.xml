<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yz.ssdemo.mapper.UserMapper">

    <select id="findUserById" resultType="com.yz.ssdemo.bean.User">
        select * from `user` where id = #{id}
    </select>

    <update id="updateUserById" parameterType="com.yz.ssdemo.bean.User">
        update `user` set nickname = #{nickname} where id = #{id}
    </update>
</mapper>
